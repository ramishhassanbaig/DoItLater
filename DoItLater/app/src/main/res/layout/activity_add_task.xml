<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    >

    <LinearLayout
        android:id="@+id/tabsLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/tabs_layout_background"
        android:weightSum="1"
        >

        <ImageView
            android:id="@+id/add_task_back_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/back_button"

            />

        <RelativeLayout
            android:id="@+id/add_task_button_Layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right">

            <!--<ImageView-->
                <!--android:id="@+id/right_tick"-->
                <!--android:layout_width="30dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:src="@drawable/tick"/>-->

            <Button

                android:id="@+id/todoTaskButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="add"
                android:textSize="24dp"
                android:layout_centerInParent="true"
                android:paddingRight="20dp"
                android:background="@null"
                android:textColor="#ffe9e9e9"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:drawableLeft="@drawable/tick"
                android:drawablePadding="-5dp"

                />
        </RelativeLayout>
    </LinearLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#ff9e9e9e"
        android:textColorHint="#ff9e9e9e"
        android:hint="Enter Task Title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="0dp"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:gravity="left">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:hint="Select Date"
            android:textColor="#ff9e9e9e"
            android:textColorHint="#ff9e9e9e"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="25dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:hint="Select Time"
            android:textColor="#ff9e9e9e"
            android:textColorHint="#ff9e9e9e"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="25dp"/>

        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/summary_box_background"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter summary or description"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="5dp"
            android:inputType="textMultiLine|textCapSentences"
            android:lines="10"
            android:gravity="top|left"
            android:scrollbars="vertical"
            android:background="#00000000"
            android:textColor="#ff9e9e9e"
            android:textColorHint="#ff9e9e9e"
            />

        </LinearLayout>


</LinearLayout>